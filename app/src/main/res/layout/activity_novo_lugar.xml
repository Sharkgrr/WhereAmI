<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".NovoLugar"
    android:layout_marginTop="20sp">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="420dp"
        android:layout_height="wrap_content"
        android:layout_gravity="fill_horizontal"
        android:layout_marginStart="10sp"
        android:layout_marginTop="10sp"
        android:backgroundTint="@color/black"
        android:elevation="20sp"
        android:fontFamily="sans-serif-black"
        android:text="@string/registrar_novo_local"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:padding="10dp"/>

    <GridLayout
        android:id="@+id/formView"
        android:layout_width="match_parent"
        android:layout_height="670dp"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:columnCount="1"
        android:rowCount="10">

        <TextView
            android:id="@+id/dataInclusao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_marginTop="45sp"
            android:layout_marginBottom="10sp"
            android:fontFamily="sans-serif-medium"
            android:hint="@string/data"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/nomeLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:hint="@string/nome_do_local"
            android:inputType="text"
            android:padding="12dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/descricaoInclusao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:hint="@string/descricao"
            android:inputType="text"
            android:padding="12dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:padding="12dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/bt_submit"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginStart="20sp"
            android:layout_marginTop="40dp"
            android:background="@drawable/rounded_corner_black"
            android:fontFamily="sans-serif-condensed-medium"
            android:padding="16dp"
            android:text="@string/gerar_localizacao"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/publicarNaMain"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10sp"
            android:background="@drawable/rounded_corner_field"
            android:fontFamily="sans-serif-condensed-medium"
            android:onClick="save"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </GridLayout>

</androidx.cardview.widget.CardView>