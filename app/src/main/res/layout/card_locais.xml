<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10sp"
    android:layout_marginVertical="10sp"
    android:clickable="true"
    android:longClickable="true"
    app:cardCornerRadius="18sp"
    app:cardBackgroundColor="@color/grey"
    app:cardElevation="4sp"
    >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10sp"
        >

        <TextView
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardNomeLugar"
            android:text="Local"
            android:textColor="@color/redneg"
            android:textSize="20sp"
            android:fontFamily="sans-serif-black"
            android:layout_marginBottom="10sp"
            />

        <TextView
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cardData"
            android:text="Data"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            />


        <TextView
            android:id="@+id/cardNomeDescricao"
            android:layout_below="@id/cardNomeCoordenadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:padding="10sp"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
        />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardNomeCoordenadas"
            android:layout_below="@id/cardNomeLugar"
            android:text="Coordenadas"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            />



    </RelativeLayout>

</androidx.cardview.widget.CardView>
